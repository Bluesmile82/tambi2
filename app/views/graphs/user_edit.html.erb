<div id="empty"></div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Profile</div>
          <div class="panel-body">
            <%= simple_form_for(@user) do |f| %>
              <%= f.error_notification %>
              <p>Image</p>
              <p>Name</p>
                <%= f.input :username, required: true, autofocus: true %>
              <p>Bio</p>
                <%= f.input :bio, autofocus: true %>
                <%= link_to 'Back', user_graphs_path(current_user), :class => 'btn btn-default' %>
                <%= f.button :submit, "Save" %>
            <% end %>
          </div>
        </div>
     </div>
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">Your Tambis</div>
         <div class="panel-body">
          <ul class="list-group">
            <% @graphs.each do |graph| %>
              <%= link_to user_graph_path(user_id: current_user, id: graph) do %>
                <li class="list-group-item">
                  <%= graph.title %>
                  <%= link_to user_graph_path(user_id: current_user, id: graph), :class => 'badge', :confirm => "Are you sure you want to delete this canvas?", :method => :delete do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                  <span class='small' ><%= graph.description %></span>
                </li>
              <% end %>
            <% end %>
          </ul>
          <div class="panel panel-default">
            <div class="panel-heading">Create a new Tambi</div>
              <div class="panel-body">
                <%= render 'form' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>