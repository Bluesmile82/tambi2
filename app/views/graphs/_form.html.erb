<% graph =  @graph || Graph.new %>
<%= simple_form_for([current_user, graph])  do |f| %>
  <% if graph.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(graph.errors.count, "error") %> prohibited this graph from being saved:</h2>

      <ul>
      <% graph.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.input :title, :placeholder=>"New Tambi"%>
    <%= f.input :description,:as =>'text', :placeholder=>"Short description of the Tambi"%>
    <%= f.input  :public, label: 'Make it collaborative' %>
    <%= f.input  :private, label: 'Make it private' %>
    <%= link_to 'Back', :back, class: 'btn btn-default' if @graph %>
    <%= f.submit text, :class=>'btn btn-success vertical-center' %>
<% end %>
